
<div class="filters">
    <div class="container">
        <div class="title">
            <h1>{{ language.products_title }}</h1>
            <span></span>
        </div>
        <div class="filters__wrap">
            <ul>
                <li class="filters__filter active">{{ language.active_filter_text }}</li>
                {% for filter in categories %}
                    {% if filter.display == 1 %}
                        <li class="filters__filter">{{ filter.name }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>